@page "/Calculadora"
<h1>Calculadora</h1>

<p>
    Calculadora basica para realizar operaciones matematicas
</p>

<div>
    <label>Numero 1</label>
    <input type="number" @bind="num1" class="form-control"/>
</div>

<div>
    <label>Numero 2</label>
    <input type="number" @bind="num2" class="form-control" />
</div>

<div class="mt-3">
    <button class="btn btn-primary" @onclick="()=>Sumar()">Sumar</button>
    <button class="btn btn-primary" @onclick="()=>Resta()">Resta</button>
    <button class="btn btn-primary" @onclick="()=>Multiplicacion()">Multiplicacion</button>
    <button class="btn btn-primary" @onclick="()=>Division()">Division</button>

</div>

<div class="mt-3">
    <label>Resultado</label>
    <div class="form-control">
        @resultado
    </div>
</div>

@code {
    double num1 = 0;
    double num2 = 0;
    double resultado = 0;

    public void Sumar()
    {
        resultado = num1 + num2;
    }

    public void Resta()
    {
        resultado = num1 - num2;
    }

    public void Multiplicacion()
    {
        resultado = num1 * num2;
    }

    public void Division()
    {
        resultado = num1 / num2;
    }
}
